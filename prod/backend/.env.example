# =============================================================================
# ORB Trading Bot - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your API keys
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# ALPACA API (Required for Trading)
# https://app.alpaca.markets/paper/dashboard/overview
# -----------------------------------------------------------------------------
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_api_secret_here
ALPACA_PAPER=false
# Set to false ONLY when ready for live trading with real money

# -----------------------------------------------------------------------------
# POLYGON API (Required for Daily Data)
# https://polygon.io/dashboard
# -----------------------------------------------------------------------------
POLYGON_API_KEY=your_polygon_api_key_here

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///./trading.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:5432/orb_trading

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# -----------------------------------------------------------------------------
# TRADING PARAMETERS
# Note: Account equity is fetched LIVE from Alpaca for compounding!
# As you profit, position sizes grow automatically.
# -----------------------------------------------------------------------------

# Strategy selection (controls top_n, direction, risk_per_trade)
# Options: top5_long, top10_long, top20_both, top50_both
# All strategies target 10% daily risk
ORB_STRATEGY=top20_both

# Universe selection for live scanning/execution
# Options: all, micro, small, large, micro_small, micro_small_unknown, micro_unknown, unknown
ORB_UNIVERSE=all

# Execution broker
# Options: alpaca, tradezero
EXECUTION_BROKER=alpaca

# Daily loss limit (kill switch triggers if exceeded)
DAILY_LOSS_LIMIT_PCT=0.10

# -----------------------------------------------------------------------------
# SEC (Shares Outstanding / Company Facts)
# -----------------------------------------------------------------------------
# SEC requires a descriptive User-Agent with contact details.
SEC_USER_AGENT="ORBResearch/1.0 your.email@example.com"

# -----------------------------------------------------------------------------
# TRADEZERO (Selenium local execution)
# -----------------------------------------------------------------------------
TRADEZERO_USERNAME=your_tradezero_username_or_email
TRADEZERO_PASSWORD=your_tradezero_password
TRADEZERO_HEADLESS=false

# IMPORTANT:
# TradeZero has multiple portals/regions. If you see errors like
# "login not match identity service", you are likely on the wrong portal for
# your account. Set this to the exact URL you use successfully in a normal browser.
TRADEZERO_HOME_URL=https://standard.tradezeroweb.us/

# Safety defaults (recommended)
TRADEZERO_DRY_RUN=false
TRADEZERO_LOCATE_MAX_PPS=0.05
TRADEZERO_DEFAULT_EQUITY=100000

# -----------------------------------------------------------------------------
# SYSTEM
# -----------------------------------------------------------------------------
# Create this file to halt all trading immediately
KILL_SWITCH_FILE=.stop_trading
